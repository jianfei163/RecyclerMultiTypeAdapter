<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_tuan_list_msg_act_mid_image"
        android:layout_width="match_parent"
        android:layout_height="181.2dp"
        android:src="@drawable/ccc"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tuan_gridview_textview_content_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4A4A4A"
            android:textSize="12sp"
            android:layout_marginLeft="4.6dp"
            android:layout_marginTop="4.6dp"
            android:text="婴儿童天然燕麦润肤乳液宝宝身体保湿滋润护肤品面霜" />

        <TextView
            android:id="@+id/tuan_gridview_textview_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#9B9B9B"
            android:layout_below="@+id/tuan_gridview_textview_content_info"
            android:layout_marginBottom="8.3dp"
            android:layout_marginLeft="4.6dp"
            android:layout_marginTop="12.3dp"
            android:text="有限公司有限公司" />

        <TextView
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_width="38dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_seek_advice_from_red"
            android:gravity="center"
            android:text="咨询" />

    </RelativeLayout>
</LinearLayout>
